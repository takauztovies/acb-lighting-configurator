// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Component {
  id          String      @id @default(cuid())
  name        String
  type        String
  description String?
  price       Float       @default(0)
  model3dUrl  String? // URL or file reference for 3D model
  imageUrl    String? // URL or file reference for thumbnail
  cardImageUrl String? // URL or file reference for detailed view
  metadata    String?   // JSON string: Record<string, any>
  snapPoints  SnapPoint[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model File {
  id          String   @id @default(cuid())
  filename    String
  url         String
  mimetype    String
  size        Int
  filepath    String?  // Make filepath optional since it's internal
  uploadedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Preset {
  id          String   @id @default(cuid())
  name        String
  description String
  components  String   // JSON string: Array of { componentId, position, rotation }
  roomDimensions String // JSON string: { width, length, height }
  previewImage String?
  photoImage  String?
  category    String?
  tags        String?  // JSON string: Array of strings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SnapPoint {
  id          String    @id @default(cuid())
  name        String
  type        String
  position    String    // JSON string: [x, y, z]
  rotation    String?   // JSON string: [x, y, z]
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  componentId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Bundle {
  id          String   @id @default(cuid())
  name        String
  description String
  components  String   // JSON string: Array of component IDs
  price       Float
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Inspiration {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  category    String?
  tags        String?  // JSON string: Array of strings
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  displaySize String?  @default("medium")
  components  String?  // JSON string: Array of component data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
